  "queryPatterns": {
    "description": "Common query patterns and use cases for this collection",
    "examples": [
      {
        "pattern": "Find all cards in a specific set",
        "query": "db.standard.findOne({setCode: 'BIG'}).cards"
      },
      {
        "pattern": "Find sets released after a certain date",
        "query": "db.standard.find({releaseDate: {$gte: new Date('2024-01-01')}})"
      },
      {
        "pattern": "Find all mythic rare cards across all sets",
        "query": "db.standard.aggregate([{$unwind: '$cards'}, {$match: {'cards.rarity': 'mythic'}}])"
      },
      {
        "pattern": "Find cards legal in Standard format",
        "query": "db.standard.aggregate([{$unwind: '$cards'}, {$match: {'cards.legalities.standard': 'Legal'}}])"
      },
      {
        "pattern": "Find cards with specific keywords",
        "query": "db.standard.aggregate([{$unwind: '$cards'}, {$match: {'cards.keywords': 'Flying'}}])"
      },
      {
        "pattern": "Get tokens created by specific cards",
        "query": "db.standard.aggregate([{$unwind: '$tokens'}, {$match: {'tokens.reverseRelated': 'Oltec Matterweaver'}}])"
